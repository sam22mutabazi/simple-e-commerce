{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/((?!api|static|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}