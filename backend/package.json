{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "simple-e-commerce",
  "version": "1.0.0",
  "description": "A basic e-commerce store built with Node.js and Express.js",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node src/seeder.js",
    "data:destroy": "node src/seeder.js -d",
    "build": "npm install && npm install --prefix frontend --production=false && npm run build --prefix frontend"
  },
  "keywords": [
    "ecommerce",
    "express",
    "mongodb",
    "rwanda"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.2",
    "flutterwave-node-v3": "^1.3.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.3.2",
    "multer": "^1.4.5",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}